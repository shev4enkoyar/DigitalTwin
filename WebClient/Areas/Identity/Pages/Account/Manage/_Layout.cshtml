@{
    string theme;
    if (!(Context.Request.Cookies.TryGetValue("ThemeSave", out theme)))
    {
        theme = "dark";
    }
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;


    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<div class="d-flex justify-content-center">
    <div class="@theme card-body" style="background:#212026; margin:2%;padding:2%; border-radius:2.5%">
        <h2 class="@theme text-white text-center">Управление учетной записью</h2>

        <div>
            <h4 class="@theme text-white text-center">Настройка аккаунта</h4>
            <hr />
            <div class="row">
                <div class="@theme col-md-3">
                    <partial name="_ManageNav" />
                </div>
                <div class="@theme col-md-9 text-white">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @RenderSection("Scripts", required: false)
}
