@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Регистрация в AgroDigitalTwin";
    string theme;
    string themeGray;
    if (!(Request.Cookies.TryGetValue("ThemeSave", out theme)))
    {
        theme = "dark";
    }
    themeGray = theme + "Gray";
}
<div class="d-flex justify-content-center">
    <div class="@theme card d-flex align-items-center p-3 my-5" style="width:40%">
        <img width="80px" src="data:image/svg+xml;base64," fill="#16D002" />
        <h4 style="fontFamily:Open Sans" class="@themeGray text-white text-center">@ViewData["Title"]</h4>
        @{
            if (@Model.DisplayConfirmAccountLink)
                {
                <p style="font-family:'Open Sans'; color:#DDDDDD; font-size:15px" class="@themeGray text-center p-2">
                        В настоящее время в этом приложении не зарегистрирован реальный отправитель электронной почты<a href="https://aka.ms/aspaccountconf">эти документы</a> о том, как настроить реального отправителя электронной почты.
                        Обычно это отправляется по электронной почте: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Нажмите здесь, чтобы подтвердить свою учетную запись</a>
                 </p>
                }
            else
                {
                <p style="font-family:'Open Sans'; color:#DDDDDD; font-size:15px" class="@themeGray text-center p-2">
                Для завершения регистрации перейдите по ссылке в письме.
                Письмо придет на указанный почтовый адрес в течение пары минут.
                </p>
                <p style="font-family:'Open Sans'; color:#DDDDDD; font-size:13px" class="@themeGray text-center px-2">
                 Через 10 секунд вы будете автоматически перенаправлены на главную
                </p>
                }
        }
    </div>
</div>