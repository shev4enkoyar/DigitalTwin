# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
max_line_length = 120
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.{py, java, r, R}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{js, ts, json, y{a, }ml, html, cwl}]
indent_style = space
indent_size = 2

[*.{md, Rmd, rst}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
